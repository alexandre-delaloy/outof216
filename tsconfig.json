{
    "compilerOptions": {
        "outDir": "public",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "es5",
        "jsx": "preserve",
        "allowJs": true,
        "downlevelIteration": true
    },
    "include": [
        "src/**/*.ts",
        "__tests/*.test.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}